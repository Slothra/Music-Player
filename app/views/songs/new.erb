<% if @song && @song.errors.any? %>
  <div>
    <strong>Some issues with your song, please fix them:</strong>
    <ul>
      <% @song.errors.full_messages.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
<form class="form-signin" method="post" action="/songs">
  <div>
  <h2 class="form-signin-heading">Enter name and song!</h2>
  </div>
  <div>
    <label>Your Name:</label>
    <input type="text" name="author" value ="<%= @song && @song.author %>" class="form-control" placeholder="Enter your name">
  </div>
  <div>
    <label>Song Title:</label>
    <input type="text" name="title" value ="<%= @song && @song.title %>" class="form-control" placeholder="Enter song title">
